{
    "$schema": "vscode://schemas/color-theme",
    "name": "AposTheme",
    "type": "dark",
    "colors": {
        // Editor
        "editor.background": "#111111",
        "editor.foreground": "#ABB2BF",
        "editor.selectionBackground": "#3E4451",
        "editor.selectionHighlightBackground": "#ffffff22",
        "editorLineNumber.foreground": "#3E4451",
        "editorIndentGuide.background": "#3E4451",
        "editorBracketMatch.background": "#2C313A",
        "editorBracketMatch.border": "#E67E22",
        "editor.lineHighlightBackground": "#2C313A",
        "editorGutter.background": "#090909",
        // Titlebar
        "titleBar.activeBackground": "#111111",
        "titleBar.activeForeground": "#ABB2BF",
        "titleBar.inactiveBackground": "#111111",
        "titleBar.inactiveForeground": "#6B717D",
        // Menu
        "menu.background": "#090909",
        "menu.foreground": "#CCCCCC",
        "menu.selectionBackground": "#2C313A",
        // Editor group
        "editorGroupHeader.tabsBackground": "#181A1F",
        "editorGroup.border": "#000000",
        // Tab
        "tab.activeBackground": "#111111",
        "tab.activeForeground": "#9DA5B4",
        "tab.border": "#000000",
        "tab.inactiveBackground": "#181A1F",
        "tab.inactiveForeground": "#737c8c",
        // Activitybar
        "activityBar.background": "#111111",
        // Sidebar
        "sideBar.background": "#181A1F",
        "sideBar.foreground": "#CCCCCC",
        "sideBar.border": "#000000",
        "sideBarTitle.foreground": "#CCCCCC",
        "sideBarSectionHeader.border": "#000000",
        "sideBarSectionHeader.background": "#111111",
        "sideBarSectionHeader.foreground": "#CCCCCC",
        // Statusbar
        "statusBar.background": "#111111",
        "statusBar.foreground": "#ABB2BF",
        "statusBar.border": "#080A0F",
        "statusBar.noFolderBackground": "#111111",
        "statusBar.noFolderForeground": "#CCCCCC",
        "statusBar.debuggingBackground": "#FAFBFC",
        "statusBar.debuggingForeground": "#CCCCCC",
        // Controls
        "focusBorder": "#E67E22",
        "contrastBorder": "#000000",
        "widget.shadow": "#080A0F",
        // Input
        "input.background": "#080A0F",
        "input.border": "#000000",
        "inputOption.activeBorder": "#E67E22",
        "inputValidation.errorBackground": "#C62D42",
        "inputValidation.errorBorder": "#C62D42",
        "inputValidation.infoBackground": "#1B659D",
        "inputValidation.infoBorder": "#1B659D",
        "inputValidation.warningBackground": "#D4AC0D",
        "inputValidation.warningBorder": "#D4AC0D",
        // Button
        "button.background": "#3498DB",
        // Dropdown
        "dropdown.background": "#080A0F",
        "dropdown.border": "#000000",
        "dropdown.listBackground": "#080A0F",
        // List
        "list.activeSelectionBackground": "#111111",
        "list.activeSelectionForeground": "#CCCCCC",
        "list.focusBackground": "#2C313A",
        "list.hoverBackground": "#2C313A",
        "list.inactiveSelectionBackground": "#111111",
        // Panel
        "panel.background": "#101010",
        "panel.border": "#000000",
        "panelTitle.activeBorder": "#CCCCCC",
        // Scrollbar
        "scrollbar.shadow": "#000000"
    },
    "tokenColors": [
        {
            "scope": "emphasis",
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": "strong",
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "name": "comment",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#5C6370"
            }
        },
        {
            "name": "primitive",
            "scope": [
                "constant",
                "support.type",
            ],
            "settings": {
                "foreground": "#6C71C4"
            }
        },
        {
            "name": "punctuation",
            "scope": [
                "meta.brace",
                "punctuation"
            ],
            "settings": {
                "foreground": "#ABB2BF"
            }
        },
        {
            "name": "variable",
            "scope": [
                "variable",
                "entity.name.variable",
                "support.variable",
                "support.type.property-name"
            ],
            "settings": {
                "foreground": "#D2D6DB"
            }
        },
        {
            "name": "string",
            "scope": [
                "string",
                "markup.inline"
            ],
            "settings": {
                "foreground": "#F1C40f"
            }
        },
        {
            "name": "function, class, namespace",
            "scope": [
                "entity.name.function",
                "entity.name.class",
                "entity.name.type",
                "support.function"
            ],
            "settings": {
                "foreground": "#2ECC71"
            }
        },
        {
            "name": "keyword, tag",
            "scope": [
                "keyword",
                "keyword.other",
                "punctuation.definition.keyword",
                "entity.name",
                "variable.language"
            ],
            "settings": {
                "foreground": "#E74C3C"
            }
        },
        {
            "name": "storage",
            "scope": [
                "storage",
                "keyword.type",
                "support.constant",
                "support.class"
            ],
            "settings": {
                "foreground": "#E67E22"
            }
        },
        {
            "name": "modifier",
            "scope": [
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#3498DB"
            }
        },
        {
            "name": "Bold",
            "scope": [
                "markup.bold",
                "punctuation.definition.bold",
                "entity.other.attribute-name.id",
                "keyword.control"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "scope": [
                "entity.name.tag"
            ],
            "settings": {
                "foreground": "#AAAAAA"
            }
        }
    ]
}
